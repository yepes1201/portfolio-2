---
// Dependencies
import { Image } from "astro:assets";

import aboutMe from "../../../../assets/about-me.png";
---

<!-- TODO: responsive -->
<section id="hero_work">
  <div
    class="container mx-auto py-8 md:py-32 h-[30dvh] md:h-[50dvh] flex items-end relative px-4"
  >
    <h1 class="uppercase text-6xl">Projects</h1>
    <Image
      src={aboutMe}
      class="hidden md:block absolute bottom-4 -right-0 xl:right-4 object-cover"
      alt="About Me"
      loading="lazy"
      format="webp"
      decoding="async"
    />
  </div>
</section>
