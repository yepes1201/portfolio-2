---
// Components
import Layout from "../../../layouts/Layout.astro";
import HeroWork from "./_components/HeroWork.astro";
import WorkContainer from "./_components/WorkContainer.astro";

// Services
import { getProjectsText } from "../../../lib/utils/api.utils";

const { lang } = Astro.params;

const { data: res } = await getProjectsText(lang);
const data = res.translations[0];
---

<Layout description={data.description} title={data.title_tag}>
  <HeroWork />
  <WorkContainer />
</Layout>
