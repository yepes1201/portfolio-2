---
// Dependencies
import type { GetStaticPaths } from "astro";

// Components
import Layout from "../../layouts/Layout.astro";
import Hero from "../../components/Hero.astro";
import AboutMe from "../../components/AboutMe.astro";
import Services from "../../components/utils/Services.astro";
import RecentProjects from "../../components/RecentProjects.astro";
import Blog from "../../components/Blog.astro";

// Services
import { getHomeTexts } from "../../lib/utils/api.utils";

const { data: res } = await getHomeTexts(Astro.params.lang);

const data = res.translations[0];
---

<Layout>
  <Hero btn_downloadcv={data.btn_downloadcv} />
  <AboutMe btn_moreaboutme={data.more_aboutme} />
  <Services title_services={data.title_services} />
  <RecentProjects
    title_projects={data.title_projects}
    btn_morework={data.btn_morework}
  />
  <Blog
    title_blog={data.title_blog}
    text_blog_working={data.text_blog_working}
  />
</Layout>
