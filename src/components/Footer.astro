---
import { Icon } from "astro-icon/components";
import Button from "./utils/Button.astro";
---

<footer id="footer" class="bg-primary-1 text-primary-4 rounded-t-[40px]">
  <div class="container mx-auto w-full flex flex-col gap-8 px-12 pt-32 pb-8">
    <div class="flex gap-8 justify-between flex-col md:flex-row">
      <h3 class="text-5xl md:text-8xl lg:text-9xl md:max-w-[100px] self-center">
        Let's talk
      </h3>
      <form class="flex flex-col gap-4 md:w-1/3 font-satoshi">
        <div class="flex flex-col gap-1">
          <label class="text-primary-3 text-3xl" for="name">Name</label>
          <input
            class="bg-transparent pb-2 border-primary-2 border-b text-2xl placeholder:text-primary-2 focus:outline-none"
            type="text"
            id="name"
            name="name"
            placeholder="Your name"
          />
        </div>
        <div class="flex flex-col gap-1">
          <label class="text-primary-3 text-3xl" for="email">Email</label>
          <input
            class="bg-transparent pb-2 border-primary-2 border-b text-2xl placeholder:text-primary-2 focus:outline-none"
            type="text"
            id="email"
            name="email"
            placeholder="dev@danielyepes.com"
          />
        </div>
        <div class="flex flex-col gap-1">
          <label class="text-primary-3 text-3xl" for="email">Email</label>
          <textarea
            class="bg-transparent pb-2 border-primary-2 border rounded-2xl resize-none h-[200px] p-2 text-xl placeholder:text-primary-2 focus:outline-none font-satoshi"
            id="email"
            name="email"></textarea>
        </div>
        <div class="self-center w-full sm:w-fit sm:self-end">
          <Button
            containerClass="w-full sm:w-fit justify-center sm:justify-start"
            class="flex items-center gap-2 sm:w-fit w-full justify-center sm:justify-start"
          >
            Send form
            <Icon class="h-6 w-6" name="mail-open" />
          </Button>
        </div>
      </form>
    </div>
    <hr class="border-primary-2 w-full" />
    <div
      class="flex gap-8 justify-between text-primary-3 font-satoshi items-center md:items-start flex-col md:flex-row"
    >
      <span>Â© {new Date().getFullYear()} Daniel Yepes</span>
      <span class="hover:cursor-copy">dev@danielyepes.com</span>
      <div class="flex gap-4">
        <a href="#" class="hover:underline">LinkedIn</a>
        <a href="#" class="hover:underline">GitHub</a>
        <a href="#" class="hover:underline">X (Twitter)</a>
      </div>
    </div>
  </div>
</footer>
